# ATS Resume Scoring and Optimization Assistant - Environment Variables
# Copy this file to .env and fill in your actual API key

# LLM Configuration
# Set to 'true' to enable LLM-powered recommendations
USE_LLM=false

# LLM Provider: 'openai', 'anthropic', or 'perplexity'
# Defaults to 'openai' if not specified
LLM_PROVIDER=perplexity

# API Keys - Set the one corresponding to your LLM_PROVIDER
# For Perplexity Sonar Pro:
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# For OpenAI:
# OPENAI_API_KEY=your_openai_api_key_here

# For Anthropic:
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

